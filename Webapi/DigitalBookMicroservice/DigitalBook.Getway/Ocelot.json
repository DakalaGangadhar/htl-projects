{
  "Routes": [
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Reader",
      "DownstreamScheme": "https",
      "ServiceName": "readerService",
      "UpstreamPathTemplate": "/api/gateway/reader/GetBookcategories",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Author",
      "DownstreamScheme": "https",
      "ServiceName": "authorService",
      "UpstreamPathTemplate": "/api/gateway/author/GetBooks",
      "UpstreamHttpMethod": [ "Get" ]
    }
  ],
  "GlobalConfiguration": {    
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": "8500",
      "Type": "Consul"
    }
  }

}
